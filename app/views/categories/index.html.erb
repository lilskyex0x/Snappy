<%= render partial: "shared/navbar", locals: { title: "Categories", logout: true, back_path: categories_path, show_next: false } %>

<section class="app-body">
<div id="categories">
  <table>
    <thead>
      <tr class="titleTr">
        <th>Icon</th>
        <th>Name</th>
        <th>Date</th>
        <th>Total Amount</th>
      </tr>
    </thead>
    <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td>
          <%= link_to category_transactions_path(category) do %>
            <div class="category-icon">
              <img src=<%=category.icon%> class="category-image">
            </div>
          <% end %>
        </td>
        <td>
          <%= link_to category.name, category_transactions_path(category), class: "full-width-link" %>
        </td>
        <td>
          <%= link_to category.created_at.strftime("%d/%m/%Y"), category_transactions_path(category), class: "full-width-link" %>
        </td>
        <td>
          <%= link_to "#{category.total_transaction_amount}$", category_transactions_path(category), class: "full-width-link" %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

  <%= link_to new_category_path, class:"new-category-link" do%>
    <div class="new-category">
      New Category
    </div>
  <% end %>
</section>