<%= render partial: "shared/navbar", locals: { title: "Add Transaction", logout: false, back_path: category_transactions_path, show_next: false } %>

<section class="app-body">
  <div>
    <%= form_with(model: [@category, @transaction], local: true, method: :post, html: { class: "new-transaction-form" }) do |f| %>
      
      <div class="field">
        <%= f.text_field :name, autocomplete: "off", placeholder:"Transaction Name" %>
      </div>

      <div class="field">
        <%= f.number_field :amount, in: 1..10000, step: 0.01, autocomplete: "off" %>
      </div>

      <%= f.hidden_field :author_id, value: current_user.id %>

      <div class="w-full fixed inset-x-0 bottom-0 submit-button">
        <div class="submit-button-border">
          <%= f.submit "Create Transaction", class: "button" %>
        </div>
      </div>
    <% end %>
  </div>
</section>