<h1>Welcome to Snappy</h1>
<p>This is the splash screen.</p>
<% if current_user %>
  <p>Continue as, <%= link_to current_user.name, categories_path %>? </p>
<% else %>
  <p>Let's get started!</p>
<% end %>
<% if user_signed_in? %>
<%= button_to 'Sign out', destroy_user_session_path, method: :delete, form: { data: { turbo_frame: "_top" } } %>
<% else %>
  <%= button_to 'Sign in', new_user_session_path %>
<% end %>